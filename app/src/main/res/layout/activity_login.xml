<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/formLayout"
    android:layout_marginBottom="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:background="#eee5ff">


    <TextView
        android:id="@+id/WelcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="تماس با ما"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/ColorTextBlue"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <LinearLayout
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="116dp">

            <ImageView
                android:id="@+id/imageViewTitle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/esf_main_contactus" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="B Koodak"
                android:text="لطفاً اطلاعات خود را وارد کنید"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="?attr/colorControlActivated"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="normal"
                android:layout_below="@+id/imageViewTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:ems="10"
            android:hint="نام و نام خانواگی..."
            android:inputType="textPersonName"
            android:textAlignment="textStart"
            android:textColorHint="@color/colorPrimary" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:ems="10"
            android:hint="شماره تلفن..."
            android:inputType="phone"
            android:maxLength="11"
            android:textAlignment="textStart"
            android:textColorHint="@color/colorPrimary" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/cbsharePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="موبایلم را ذخیره کن" />

    <view
        class="android.support.v7.widget.AppCompatTextView"
        id="@+id/view9"
        layout_width="match_parent"
        android:width="1000dp"
        android:background="#0758ed"
        android:layout_width="wrap_content"
        android:layout_height="3dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="56dp"
            android:layout_height="47dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mail" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="ایمیل..."
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorPrimary"  />

    </LinearLayout>

    <view
        class="android.support.v7.widget.AppCompatTextView"
        id="@+id/view"
        layout_width="match_parent"
        android:width="1000dp"
        android:background="#0758ed"
        android:layout_width="wrap_content"
        android:layout_height="3dp" />

    <EditText
        android:id="@+id/editMessage"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="متن پیام"
        android:textColorHint="@color/colorPrimary"/>

    <Button
        android:id="@+id/btnSubmit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="ارسال پیام"
        android:textSize="18sp"></Button>

    <Button
        android:id="@+id/btnBackContactUS"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="انصراف"
        android:textSize="18sp"></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/shotaddress" />

    </LinearLayout>


</LinearLayout>